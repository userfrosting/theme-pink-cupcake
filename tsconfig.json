{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
    ],
    "exclude": ["vite.config.ts"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "rootDir": "src",
        "types": ["vitest/globals"]
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
